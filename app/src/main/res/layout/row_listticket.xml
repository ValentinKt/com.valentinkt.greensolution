<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="listticketRowModel" type="com.valentinkt.sunapp.modules.myaccount.data.model.ListticketRowModel"/>
    </data>
    <LinearLayout android:id="@+id/linearRowthree"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" android:orientation="horizontal">
        <LinearLayout android:id="@+id/linearRowticket"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_2pxv"
            android:layout_marginTop="@dimen/_1pxv"
            android:layout_weight="0.92" android:layout_width="0dp" android:orientation="horizontal">
            <ImageView android:id="@+id/imageTicket"
                android:layout_height="@dimen/_20pxh"
                android:layout_width="@dimen/_20pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_ticket"
                tools:ignore="ContentDescription" tools:src="@drawable/img_ticket"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtBalance"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_1pxv"
                android:layout_marginStart="@dimen/_30pxh"
                android:layout_marginTop="@dimen/_1pxv"
                android:layout_weight="0.73" android:layout_width="0dp"
                android:singleLine="true"
                android:text="@{listticketRowModel.txtBalance}"
                style="@style/txtIntermedium14" tools:text="@string/lbl_balance"/>
        </LinearLayout>
        <TextView android:ellipsize="end" android:id="@+id/txtThree"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_166pxh"
            android:layout_weight="0.08" android:layout_width="0dp"
            android:singleLine="true"
            android:text="@{listticketRowModel.txtThree}"
            style="@style/txtPoppinsmedium16_3" tools:text="@string/lbl3"/>
    </LinearLayout>
</layout>
